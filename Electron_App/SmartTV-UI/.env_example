# Smart TV Application Configuration
# Copy this file to .env and update with your actual values

# Set to 'true' to use local development server, 'false' or unset for remote server
USE_LOCAL_SERVER=false

# Backend Server URL (Flask API) - Optional override
# SERVER_URL=http://localhost:3001

# WebSocket URL for trivia games
WEBSOCKET_URL=ws://localhost:3000

# Environment (development, production)
# Setting NODE_ENV=development will automatically enable USE_LOCAL_SERVER
NODE_ENV=production